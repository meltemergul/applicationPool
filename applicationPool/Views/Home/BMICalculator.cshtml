@{
    ViewData["Title"] = "Vücut Kitle Endeksi Hesaplama";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</head>
<body>
    <div class="container">
        <h1>Vücut Kitle Endeksi Hesaplama</h1>
        <form id="bmiForm">
            <div class="form-group">
                <label for="boy">Boy (cm):</label>
                <input type="number" class="form-control" id="boy" required>
            </div>
            <div class="form-group">
                <label for="kilo">Kilo (kg):</label>
                <input type="number" class="form-control" id="kilo" required>
            </div>
            <button type="submit" class="btn btn-primary">Hesapla</button>
        </form>
        <div id="sonuc" class="mt-3"></div>
    </div>

    <script>
    $(document).ready(function() {
        $('#bmiForm').submit(function(event) {
            event.preventDefault();
            var boy = parseFloat($('#boy').val());
            var kilo = parseFloat($('#kilo').val());

            $.ajax({
                url: '@Url.Action("CalculateBMI", "Home")',
                type: 'POST',
                data: { boy: boy, kilo: kilo },
                success: function(result) {
                    $('#sonuc').html(
                        `<h3>Vücut Kitle Endeksi: ${result.vücutKitleEndeksi.toFixed(2)}</h3>
                        <p>${result.sonuc}</p>`
                    );
                }
            });
        });
    });
    </script>
</body>
</html>
