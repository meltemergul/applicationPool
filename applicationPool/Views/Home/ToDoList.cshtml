@model IEnumerable<applicationPool.Models.TodoItem>

<h1>Todo List</h1>

<p>
    <a href="/Todo/Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Is Completed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.IsCompleted</td>
                <td>
                    <a href="/Todo/Edit/@item.Id" class="btn btn-warning">Edit</a>
                    <a href="/Todo/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
